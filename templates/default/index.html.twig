{% extends 'base.html.twig' %}

{% block title %}Les projets{% endblock %}

{% block body %}
    <main class="page-content">
        <div class="container">
            <h1>Bienvenue sur Fund My Project</h1>
            <p>Aidez-nous à créer de nouveaux projets chaque jour !</p>
            <div class="row">

                {% for project in projects %}
                    <article class="col-4">
                        <div class="card">
                            <img src="{{ asset('uploads/' ~ project.image) }}" class="card-img-top"
                                 alt="{{ project.name }}">
                            <div class="card-body">
                                <h5 class="{{ project.name }}">"{{ project.name }}"</h5>
                                <ul class="badges">
                                    {% for category in project.categories %}
                                        <span>{{ category.name }}</span>
                                    {% endfor %}
                                </ul>
                                <p class="card-text">
                                    {% for category in project.categories %}
                                        <span>{{ project.excerpt }}</span>
                                    {% endfor %}</p>
                                <a href=""{{ path('project_index') }}" class="badge badge-pill badge-primary">
                                <i class="fa fa-eye"></i>
                                Voir plus
                                </a>
                            </div>
                        </div>

                    </article>
                {% endfor %}

            </div>
        </div>
    </main>
{% endblock %}
