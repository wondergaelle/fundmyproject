<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<body>
<header class="page-header ">
    <div class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
        <div class="container">
            <a href=" {{ path('homepage') }}">Fund My Project ...</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                    aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('project_index') }}">Les Projets</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="{{ path('category_index') }}"
                           id="download">Catégories
                            <span class="caret"></span></a>
                        <div class="dropdown-menu" aria-labelledby="download">
                            {{ render(controller('App\\Controller\\DefaultController::headerCategories')) }}
                        </div>
                    </li>
                    <li class="nav-item">
                        {% if app.user %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a></li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('easyadmin') }}">Administration</a></li>
                    {% endif %}
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">
                            <i class="fa fa-sign-in"></i>
                            Me connecter
                        </a>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>

<main>
    {% block body %}{% endblock %}
</main>

<footer class="page-footer">
    <div class="container">
        <i class="fa fa-copyright"></i> Fund My Project 2020
    </div>
</footer>


{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}


</body>
</html>
